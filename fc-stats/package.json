    "elasticsearch": "^16.3.0",
    "express-flash": "0.0.2",
    "express-session": "^1.16.1",
    "font-awesome": "^4.7.0",
    "jquery": "^3.4.1",
    "lightpick": "^1.3.4",
    "moment": "^2.24.0",
    "mongodb": "^3.2.7",
    "nestjs-config": "^1.4.0",
    "parcel-bundler": "^1.12.3",
    "pg": "^7.11.0",
