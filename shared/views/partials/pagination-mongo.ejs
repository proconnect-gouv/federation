<% if(pageCount !== 1) { %>
  <pagination class="pagination d-flex justify-content-center" 
      data-init="paginationStyle" 
      data-pages="<%= pageCount %>" 
      data-limit="<%= limit %>"  
      data-currentPge="<%= page %>"
      data-previous="<%= previous %>"
      data-next="<%= next %>"
      data-sort="<%= sort %>"
      data-action="<%= action %>"
      data-rooturl="<%= APP_ROOT %>"
      aria-label="Page navigation example">    
      <ul id="pagination-container" class="pagination justify-content-center flex-wrap">
      </ul>
  </pagination>
  <% } %>
