{
  "extends": ["@fc/stylelint-config-react-app"],
  "plugins": ["stylelint-order"],
  "overrides": [
    {
      "files": ["*/**/*.module.scss"],
      "rules": {
        "selector-class-pattern": [
          "^[a-z][a-zA-Z0-9]+$",
          {
            "message": "Expected class selector to be camelCase"
          }
        ]
      }
    }
  ]
}
