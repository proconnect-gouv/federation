{
  "include": [
    "*.js",
    "*.ts",
    "test-utils/*",
    "libs/**/*.ts",
    "libs/**/*.tsx",
    "apps/**/*.ts",
    "apps/**/*.d.ts",
    "apps/**/*.tsx",
    "apps/**/*.js"
  ],
  "compilerOptions": {
    "target": "es6",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "paths": {
      "@fc/tests-utils": ["../../tests-utils/src"],
      "@fc/tests-utils/*": ["../../tests-utils/src/*"],
      "@fc/storybook-config": ["./.storybook"],
      "@fc/storybook-config/*": ["./.storybook/*"]
    }
  }
}
