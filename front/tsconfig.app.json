{
  "include": ["src/**/*.tsx", "src/**/*.ts", "additional.d.ts"],
  "exclude": ["src/**/*.spec.tsx", "src/**/*.spec.ts"],
  "compilerOptions": {
    "target": "es6",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "paths": {
      "^@fc/account(|/.*)$": ["../../libs/account/src/*"],
      "^@fc/agent-connect-history(|/.*)$": ["../../apps/agent-connect-history/src/*"],
      "^@fc/agent-connect-search(|/.*)$": ["../../apps/agent-connect-search/src/*"],
      "^@fc/axios-error-catcher(|/.*)$": ["../../libs/axios-error-catcher/src/*"],
      "^@fc/backoffice(|/.*)$": ["../../libs/backoffice/src/*"],
      "^@fc/common(|/.*)$": ["../../libs/common/src/*"],
      "^@fc/config(|/.*)$": ["../../libs/config/src/*"],
      "@fc/dsfr": ["../../libs/dsfr/src"],
      "@fc/dsfr/*": ["../../libs/dsfr/src/*"],
      "^@fc/error-boundary(|/.*)$": ["../../libs/error-boundary/src/*"],
      "^@fc/http-client(|/.*)$": ["../../libs/http-client/src/*"],
      "^@fc/i18n(|/.*)$": ["../../libs/i18n/src/*"],
      "^@fc/loading(|/.*)$": ["../../libs/loading/src/*"],
      "^@fc/oidc-client(|/.*)$": ["../../libs/oidc-client/src/*"],
      "^@fc/partners(|/.*)$": ["../../apps/partners/src/*"],
      "^@fc/routing(|/.*)$": ["../../libs/routing/src/*"],
      "^@fc/service-providers(|/.*)$": ["../../apps/service-providers/src/*"],
      "^@fc/state-management(|/.*)$": ["../../libs/state-management/src/*"],
      "^@fc/storybook-config(|/.*)$": ["../../.storybook/*"],
      "^@fc/tests-utils(|/.*)$": ["../../tests-utils/src/*"],
      "^@fc/tracks(|/.*)$": ["../../apps/tracks/src/*"],
      "^@fc/user-dashboard(|/.*)$": ["../../apps/user-dashboard/src/*"],
      "^@fc/user-preferences(|/.*)$": ["../../apps/user-preferences/src/*"]
    }
  }
}
