<div class="align-bottom-right">
  <a id="<%= fieldToSortOn %>-asc" href="<%= APP_ROOT %><%= uri %>?sortField=<%= fieldToSortOn %>&sortDirection=asc&page=<%= page %>&limit=<%= limit %>"
    class="fa fa-sort-asc align-bottom  <%= querySortDirection === 'asc' && querySortField === fieldToSortOn ? 'text-primary' : 'text-dark' %>"></a>
  <a id="<%= fieldToSortOn %>-desc" href="<%= APP_ROOT %><%= uri %>?sortField=<%= fieldToSortOn %>&sortDirection=desc&page=<%= page %>&limit=<%= limit %>"
    class="fa fa-sort-desc align-top <%= querySortDirection === 'desc' && querySortField === fieldToSortOn ? 'text-primary' : 'text-dark' %>"></a>
</div>
