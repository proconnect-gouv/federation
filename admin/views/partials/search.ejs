<div class=" float-end">
  <form class="d-flex align-items-center" id="search-form" data-init="validForm" method="GET" novalidate>
    <div class="mb-3 mx-sm-2">
      <label for="search" class="visually-hidden">Search</label>
      <input type="text"
      value="<%= userSearch %>"
      name="search"
      class="form-control" 
      id="searchInput"
      style="width:100%"
      placeholder="Recherche par nom ou clientID"
      aria-describedby="recherche par client id ou nom"
      data-init="searchReset"
      autofocus
      required>
    </div>
    <button type="submit" id="searchBtn" class="btn btn-primary mb-3 p-1">Rechercher</button>
  </form>
</div>
 