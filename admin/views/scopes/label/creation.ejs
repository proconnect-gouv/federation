<!DOCTYPE html>
<html lang="fr">
  <head>
    <%- include('partials/head.ejs') -%>
  </head>
  <body>
    <%- include('partials/header.ejs') -%>
    <div class="container-fluid">
      <div class="row">
        <div class="col-12">
          <p class="h2">Ajouter un nouveau label</p>
        </div>
        <div class="card col-12">
          <%- include('partials/global-errors-handler.ejs') -%>

          <form
            method="POST"
            data-init="validForm"
            id="scope-labels-form"
            name="scope-labels-form"
            action="<%= APP_ROOT %>/scopes/label/create"
            novalidate
          >
            <div class="mb-3 row mt-4">
              <label class="col-2 col-form-label" for="scope">Scope*</label>
              <div class="col-10">
                <input
                  type="text"
                  class="form-control"
                  id="scope"
                  name="scope"
                  aria-describedby="scopeHelp"
                  placeholder="Scope"
                  required
                />
              </div>
            </div>
            <div class="mb-3 row">
              <label class="col-2 col-form-label" for="exampleInputEmail1"
                >Label*</label
              >
              <div class="col-10">
                <input
                  type="text"
                  class="form-control"
                  name="label"
                  id="label"
                  aria-describedby="labelHelp"
                  placeholder="Label"
                  required
                />
              </div>
            </div>
            <div class="mb-3 row">
              <label class="col-2 col-form-label" for="fd"
                >Fournisseur de données*</label
              >
              <div class="col-10">
                <select
                  id="fd"
                  class="form-select-sm form-select item-number"
                  name="fd"
                  required
                >
                  <% for (const fd of Object.keys(locals.scopesGroupedByFd)) {
                  %>
                  <option value="<%=fd%>"><i><%=fd%></i></option>
                  <% }; %>
                </select>
              </div>
            </div>
            <div class="mb-3 row">
              <label class="col-2" for="confirm-2FAuthentication"
                >Code TOTP</label
              >
              <div class="col-lg-10">
                <input
                  id="_totp"
                  type="text"
                  required
                  value="<%= locals.messages.values && messages.values[0]._totp %>"
                  class="form-control <%= locals.messages.errors && messages.errors[0]._totp && 'is-invalid' %>"
                  name="_totp"
                />
                <% if (locals.messages.errors && messages.errors[0]._totp) { %>
                <div class="invalid-feedback">
                  <% locals.messages.errors[0]._totp.forEach((error) => { %>
                  <p><%= error %></p>
                  <% }) %>
                </div>
                <% } %>
              </div>
            </div>
            <input
              type="hidden"
              name="_csrf"
              value="<%= locals.csrfToken  %>"
            />
            <div class="d-flex justify-content-center">
              <button type="submit" class="btn btn-primary mb-4">
                Créer un label
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </body>
</html>
