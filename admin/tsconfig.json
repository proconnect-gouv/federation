{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2023",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "preserveSymlinks": true,
    "moduleResolution": "node",
    "allowJs": true,
    "esModuleInterop": true,
    "types": ["jest", "node"]
  },
  "include": [
    "src/**/*"
  ]
}
