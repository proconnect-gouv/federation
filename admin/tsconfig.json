{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "preserveSymlinks": true,
    "moduleResolution": "node",
    "allowJs": true,
    "skipLibCheck": true,
    "paths": {
      "@pc/shared": ["src/shared"],
      "@pc/shared/*": ["src/shared/*"]
    }
  },
  "exclude": ["node_modules"]
}
