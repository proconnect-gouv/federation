{
  "compilerOptions": {
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "lib": [
      "ES2022",
      "dom"
    ],
    "module": "nodenext",
    "target": "ES2022",
    "types": [
      "cypress",
      "cypress-axe",
      "node"
    ]
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "**/*.spec.ts"
  ]
}
