{
  "name": "fcp-system-testing",
  "version": "1.0.0",
  "description": "FCP - System Testing using Cypress/Cucumber",
  "main": "index.js",
  "dependencies": {
    "@types/cypress-cucumber-preprocessor": "^4.0.0",
    "cucumber-html-reporter": "^5.4.0",
    "cypress": "^7.5.0",
    "cypress-cucumber-preprocessor": "^4.1.2",
    "cypress-template-fixtures": "^1.0.3",
    "otplib": "^12.0.1",
    "ts-node": "^10.0.0",
    "typescript": "^4.3.2"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.26.0",
    "@typescript-eslint/parser": "^4.26.0",
    "eslint": "^7.27.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-cypress": "^2.11.3",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "eslint-plugin-sort-destructure-keys": "^1.3.5",
    "eslint-plugin-sort-keys-fix": "^1.1.1",
    "eslint-plugin-typescript-sort-keys": "^1.6.0",
    "fs-extra": "^10.0.0",
    "multiple-cucumber-html-reporter": "^1.18.0",
    "prettier": "^2.3.0"
  },
  "scripts": {
    "clean": "rm -rf ./cypress/reports/cucumber && rm -rf ./cypress/screenshots && rm -rf ./cypress/videos",
    "prettier": "prettier -c \"{cypress,scripts}/**/*.ts\" --config .prettierrc",
    "lint": "eslint \"{cypress,scripts}/**/*.ts\"",
    "test:high:base": "npx cypress-tags run --env 'TAGS=not @ignoreHigh and not @fcpLow' --config-file cypress-fcp-high.json -c video=${CYPRESS_VIDEO}",
    "test:high:chrome-desktop": "yarn test:high:base --browser chrome --headless",
    "test:high:chrome-mobile": "yarn test:high:base --browser chrome --headless --config viewportWidth=320,viewportHeight=568",
    "test:high": "yarn clean && yarn test:high:base",
    "test:low:base": "npx cypress-tags run --env 'TAGS=not @ignoreLow and not @fcpHigh' --config-file cypress-fcp-low.json -c video=${CYPRESS_VIDEO}",
    "test:low:chrome-desktop": "yarn test:low:base --browser chrome --headless",
    "test:low:chrome-mobile": "yarn test:low:base --browser chrome --headless --config viewportWidth=320,viewportHeight=568",
    "test:low": "yarn clean && yarn test:low:base",
    "start:high": "cypress open --config-file cypress-fcp-high.json",
    "start:low": "cypress open --config-file cypress-fcp-low.json",
    "report:prepare": "ts-node ./scripts/prepare-cucumber-logs",
    "report:generate": "ts-node ./scripts/multiple-cucumber-html-reporter"
  },
  "keywords": [
    "Cypress",
    "QA",
    "Cucumber"
  ],
  "author": "Nicolas Legeay",
  "license": "ISC",
  "cypress-cucumber-preprocessor": {
    "step_definitions": "cypress/support/**/steps",
    "cucumberJson": {
      "generate": true,
      "outputFolder": "cypress/reports/cucumber",
      "filePrefix": "",
      "fileSuffix": ".cucumber"
    }
  }
}
