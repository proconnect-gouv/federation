{
  "name": "fcp-system-testing",
  "version": "1.0.0",
  "description": "FCP - System Testing using Cypress/Cucumber",
  "main": "index.js",
  "dependencies": {
    "@types/cypress-cucumber-preprocessor": "^4.0.0",
    "cucumber-html-reporter": "^5.4.0",
    "cypress": "^7.1.0",
    "cypress-cucumber-preprocessor": "^4.0.3",
    "otplib": "^12.0.1",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.4"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "eslint": "^7.2.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-cypress": "^2.11.3",
    "eslint-plugin-import": "^2.19.1",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "eslint-plugin-sort-destructure-keys": "^1.3.5",
    "eslint-plugin-sort-keys-fix": "^1.1.1",
    "eslint-plugin-typescript-sort-keys": "^1.6.0",
    "prettier": "^2.2.1"
  },
  "scripts": {
    "clean": "rm -rf ./cypress/reports/cucumber",
    "lint": "eslint \"{cypress,scripts}/**/*.ts\"",
    "test": "yarn clean && cypress run",
    "start": "cypress open",
    "report": "ts-node ./scripts/cucumber-html-reporter"
  },
  "keywords": [
    "Cypress",
    "QA",
    "Cucumber"
  ],
  "author": "Nicolas Legeay",
  "license": "ISC",
  "cypress-cucumber-preprocessor": {
    "step_definitions": "cypress/support/**/steps",
    "cucumberJson": {
      "generate": true,
      "outputFolder": "cypress/reports/cucumber",
      "filePrefix": "",
      "fileSuffix": ".cucumber"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "echo \"[Husky] pre-commit\" && yarn lint"
    }
  }
}
